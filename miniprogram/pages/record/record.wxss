/* pages/record/record.wxss */
page{
  height: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
}
.draw{
  width: 90%;
  height: 30vh;
  display: inline-block;
  background-color: white;
}
ec-canvas {
  width: 100%;
  height: 100%;
  display: block;
}
.listdata{
  height: 60vh;
  background-color: white;
}
.listitem{
  display: flex;
  flex-direction: row;
  justify-content: left;
  align-items: center;
  padding: 10rpx;
  border: 1px solid rgba(0, 0, 0, 0.1);
}
.datetime{
  font-size: 13pt;
  color: darkgray;
  margin-right: 20rpx;
}
.weight{
  font-size: 13pt;
  font-weight: bold;
  font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
}