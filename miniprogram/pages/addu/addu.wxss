/* pages/addu/addu.wxss */
page{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.addu{
  height: 50%;
}
.select{
  margin-top: 10rpx;
  padding: 10rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid black;
  margin-bottom: 20rpx;
}
.result{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.user{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
}
.user image{
  border-radius: 50%;
}