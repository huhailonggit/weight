page{
  height: 100%;
}
.mybg{
  display: flex;
  height: 100%;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.clock{
  position: relative;
  width: 300rpx;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 120rpx;
}